= render({:partial => "shared/errors", :object => @response})
= form_for([@response]) do |r|
  %fieldset
    %legend= t(".legend")
    %ol
      %li
        = r.label(:name)
        = r.text_field(:name, {:required => true, :size => 60, :maxlength => 160})
      %li
        = r.label(:value)
        = r.select(:value, options_for_select(response_value_options, @response.value))
  %fieldset
    .center
      = link_to(t(".cancel"), weltel_responses_path, :class => "button")
      = r.submit(t(".commit"), :disable_with => t(".commit_disable"))