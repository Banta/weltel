twilio:
  phone_number: 'your number'
  account_sid: 'your account sid'
  auth_token: 'your auth token'
time_zone: "Pacific Time (US & Canada)"
demo_enabled: true
update:
  refresh: 10
deployment:
  server: 'localhost'
  app_name: 'weltel'
  app_repo: "https://github.com/weltel/weltel.git"
  app_branch: 'ar'
  deploy_to: '/home/paul/dev/weltel' 
  app_root: '/home/paul/dev/weltel'
  working_directory: "/home/paul/dev/weltel/tmp"
  internal_host: "http://localhost:3000"
  rails_env: 'development'
  log_directory: "/home/paul/dev/weltel/log"
  processes:
    unicorn:
      start: "bundle exec unicorn_rails -E #{RAILS_ENV} -c #{APP_ROOT}/config/unicorn.rb -D"
      stop: "kill -QUIT $(cat #{PID_FILE})"
      restart: "kill -USR2 $(cat #{PID_FILE})"
      workers: 2
      port: 3000
      process_name: 'mambo_unicorn'
    dj:
      start: "cd #{APP_ROOT} && bundle exec rake jobs:work"
      daemonize: true
    gammu:
      config_file: '/home/paul/dev/weltel/config/gammurc'
      start: 'gammu-smsd -c /home/paul/dev/weltel/config/gammurc'
      stop: "kill -TERM $(cat #{PID_FILE})"
      daemonize: true
  monitoring:
    log_file: "monitoring.log"
    group_name: 'mambo'
  uid: 'paul'
  gid: 'paul'
